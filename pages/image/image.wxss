}

.parent {
  width: 650rpx;
  height: 468rpx;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  margin: auto auto;
  overflow: hidden;
  position: absolute;
  border-radius: 16rpx;
  box-shadow: 0 0 88px 5px rgba(0, 0, 0, 0.75);
}

.silder {
  position: absolute;
  width: 400%;
  height: 100%;
  background: black;
  display: inline-flex;
  overflow: hidden;
}
image {
  width: 650rpx;
  height: 468rpx;
  vertical-align: middle;
}

.title {
  position: absolute;
  font-weight: 800;
  font-size: xx-large;
  bottom: 300rpx;
  left: 100rpx;
}

.line {
  position: absolute;
  font-weight: 800;
  font-size: x-large;
  color: silver;
  bottom: 290rpx;
  left: 100rpx;
}

.map {
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  bottom: 50rpx;
  left: 30rpx;
}

.author {
  font-weight: lighter;
  font-size: 40rpx;
  position: absolute;
  left: 420rpx;
  bottom: 140rpx;
}

.location {
  font-weight: 70;
  font-size: 32rpx;
  position: absolute;
  left: 500rpx;
  bottom: 50rpx;
}

.header {
  position: absolute;
  height: 500rpx;
  width: 750rpx;
  background-color: #81C7D4;
  border-radius: 50%;
  top: -280rpx;
}

.next {
  position: absolute;
  right: 13rpx;
  width: 90rpx;
  height: 90rpx;
  top: 600rpx;
  z-index: 100;
}

.last {
  position: absolute;
  left: 13rpx;
  width: 90rpx;
  height: 90rpx;
  top: 600rpx;
  z-index: 100;
}
